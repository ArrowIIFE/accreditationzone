				<!-- form handling -->
				<form action="/" method="POST">
					<table class="table">
						<thead class="thead-dark">
							<tr>
								<th>ID</th>
								<th>NAME</th>
								<th>DESIGNATION</th>
								<th>ORGANIZATION</th>
								<th>CARD TYPE</th>
								<th>VENUES</th>
								<th>ZONE ONE</th>
								<th>ZONE TWO</th>
								<th>ZONE THREE</th>
								<th>ZONE FOUR</th>
								<th>ZONE FIVE</th>
								<th>ZONE SIX</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							<% users.forEach(function(user) { %>
							<tr id="<%= user._id %>">
								<td><%= user.id %></td>
								<td><%= user.fullname %></td>
								<td><%= user.designation %></td>
								<td><%= user.organization %></td>
								<td><%= user.cardname %></td>
								<td><%= user.vanue %></td>
								<td><%= user.zoneone %></td>
								<td><%= user.zonetwo %></td>
								<td><%= user.zonethree %></td>
								<td><%= user.zonefour %></td>
								<td><%= user.zonefive %></td>
								<td><%= user.zonesix %></td> 
								<td>
									<div>
										<form class="left" action="/law-edit/<%=user._id %>" method="get">
											<button type="submit" class="btn border-shadow update"><span class="text-gradient"><a href="#"><i class="fas fa-pencil-alt"></i></a></span>
											</button>
										</form>
										<a href="/law-data" class="right btn border-shadow delete"><span class="text-gradient"><i class="fas fa-times" onclick="deleteAllUser('<%= user._id %>')"></i></span>
										</a>
									</div>
									
								</td>
							</tr>
							<% }) %>
						</tbody>
					</table>
				</form>
			</div>
